{
  "manifest_version": 3,
  "name": "TRAIL - Visual History Mapper",
  "version": "2.0.0",
  "description": "Transform your browsing history into an interactive cosmic constellation map",
  "author": "Wizardrytezch",
  "homepage_url": "https://github.com/CrazhHolmes/TRAIL-Extension",
  
  "permissions": [
    "history",
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://icons.duckduckgo.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TRAIL - Open Constellation Map"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["constellation.html", "lib/d3.min.js", "constellation.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
