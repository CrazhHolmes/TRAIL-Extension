/* TRAIL v1.0 | Built by CrazhHolmes | github.com/CrazhHolmes | Patent Pending */
{
  "manifest_version": 3,
  "name": "TRAIL - Visual History Mapper",
  "version": "1.0.0",
  "description": "Automatic Visual History Mapper - Transform your browsing into a constellation of knowledge",
  "author": "Wizardrytezch",
  "homepage_url": "https://github.com/CrazhHolmes",
  
  "permissions": [
    "history",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/Readability.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
